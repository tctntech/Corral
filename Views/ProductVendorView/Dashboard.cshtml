@{
    ViewData["Title"] = "Products & Vendors Dashboard";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color: #e3f2fd;">
    <div class="card shadow-lg p-4 text-center" style="width: 350px; border-radius: 15px; background: white; border: none;">
        <h4 class="mb-4 text-primary fw-bold" style="font-size: 1.2rem;">Products & Vendors</h4>
        <div class="d-grid gap-3">
            <a asp-controller="ProductVendorView" asp-action="Products"
               class="btn btn-primary text-white"
               style="border-radius: 8px; font-size: 0.9rem; font-weight: bold; transition: transform 0.2s, box-shadow 0.2s;">
                Absolute Products
            </a>
            <a asp-controller="VendorView" asp-action="Vendors"
               class="btn btn-primary text-white"
               style="border-radius: 8px; font-size: 0.9rem; font-weight: bold; transition: transform 0.2s, box-shadow 0.2s;">
                Vendor Management
            </a>
        </div>
    </div>
</div>

<style>
    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }
</style>

<!-- Bootstrap CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
